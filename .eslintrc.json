{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended", "google"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "jest"],
  "rules": {
    "no-console": 2,
    "require-jsdoc": 0,
    "generator-star-spacing": "error",
    "no-alert": "error",
    "indent": ["error", 2],
    "camelcase": "warn",
    "object-curly-spacing": ["error", "never"],
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["warn", "always-multiline"],
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "no-negated-condition": "warn",
    "new-cap": "warn",
    "no-invalid-this": "error",
    "max-len": [
      0,
      {
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true,
        "ignorePattern": true
      }
    ]
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "detect"
    }
  }
}
